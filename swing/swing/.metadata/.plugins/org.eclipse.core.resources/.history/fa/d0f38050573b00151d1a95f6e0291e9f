		String sql = new String();

		sql = "Select * from swing.klient";

		ResultSet rezultatZapytania = polaczenieOdbierzJDBC(sql);

		while (rezultatZapytania.next()) {
			for (int i = 0; i < 8; i++) {
				if (i > 1)
					System.out.print(" ");
				String columnValue = rezultatZapytania.getString(i);
				System.out.print(columnValue);
			}
			System.out.println("");
		}
